<div class="view">
    <div class="static"></div>
    <div class="mt-4 show">
        <h3> Nhap Thong Tin</h3>

        <form method="post" action="/rooms/store">
            <div class="form-group">
                <label for="name">Id Phòng</label>
                <input type="text" class="form-control" id="id_phong" name="id_phong">
            </div>
            <div class="form-group">
                <label for="ten_phong">Tên Phòng </label>
                <input type="text" class="form-control" id="ten_phong" name="ten_phong">
            </div>
            <div class="form-group">
                <label for="loai_phong">Loại Phòng</label>
                <input type="text" class="form-control" id="loai_phong" name="loai_phong">
            </div>
            <div class="form-group">
                <label for="gia_phong">Giá Phòng</label>
                <input type="text" class="form-control" id="gia_phong" name="gia_phong">
            </div>
            <div class="form-group">
                <label for="so_nguoi_toi_da">Số người tối đa</label>
                <input type="text" class="form-control" id="so_nguoi_toi_da" name="so_nguoi_toi_da">
            </div>
            <div class="form-group">
                <label for="trang_thai">Trạng thái</label>
                <input type="text" class="form-control" id="trang_thai" name="trang_thai">
            </div>

            <button type="submit" class="btn btn-primary" name="submit" value="create">Thêm</button>
        </form>
    </div>
</div>