<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Sex</th>
    </tr>
  </thead>
  <tbody>
    {{#each courses}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.age}}</td>
        <td>{{this.sex}}</td>
        <td>
          <a href="/courses/{{this._id}}" class="btn btn-link">Sua</a>
          <a href="#" class="btn btn-link">Xoa</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>